<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4B00B2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Logo dengan Lingkaran di Belakangnya -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/circle_background"
            android:padding="8dp"
            android:src="@drawable/food_image"
            android:scaleType="centerInside"/>

        <!-- Teks Judul -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Tasty Dash"
            android:textSize="25sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/lt_reguler"/>

        <!-- Tombol Login dan Sign Up -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/loginTab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#CCCCCC"
                android:text="Login"
                android:textSize="18sp"
                android:textColor="#000000"/>

            <Button
                android:id="@+id/signupTab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:text="Sign up"
                android:textSize="18sp"
                android:textColor="#000000"/>
        </LinearLayout>

        <!-- Input Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="#000000"
                android:textSize="16sp"
                android:fontFamily="@font/p_semibolt"/>

            <EditText
                android:id="@+id/nameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_background"
                android:hint="Enter your name"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#AAAAAA" />
        </LinearLayout>

        <!-- Input Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="#000000"
                android:textSize="16sp"
                android:fontFamily="@font/p_semibolt"/>

            <EditText
                android:id="@+id/emailInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_background"
                android:hint="Enter your email"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#AAAAAA" />
        </LinearLayout>

        <!-- Input Password -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="#000000"
                android:textSize="16sp"
                android:fontFamily="@font/p_semibolt"/>

            <EditText
                android:id="@+id/passwordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_background"
                android:hint="Enter your password"
                android:padding="12dp"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textColorHint="#AAAAAA" />
        </LinearLayout>

        <!-- Tombol Sign up -->
        <Button
            android:id="@+id/signupButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="#333333"
            android:text="Sign up"
            android:textSize="23sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_button"/>

    </LinearLayout>
</ScrollView>
